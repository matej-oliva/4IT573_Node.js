<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TODO list</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1>TODO list</h1>
    
    <% for (const todo of todos) { %>
      <div class="card my-3">
        <div class="card-body">
          <h5 class="card-title"><%= todo.title %></h5>
          <p class="card-text"><%= todo.description %></p>
          <a class="btn btn-info" href="/change-todo-state/<%= todo.id %>">
            <%= todo.done ? 'Splneno' : 'Nesplneno' %>
          </a>
          <a class="btn btn-danger" href="/remove-todo/<%= todo.id %>">
            Odebrat
          </a>
          <a class="btn btn-success" href="/todo/<%= todo.id %>">
            Detail
          </a>
        </div>
      </div>
    <% } %>

    <form action="/new-todo" method="post" class="mt-3">
      <div class="row">
        <div class="col">
          <input type="text" name="title" class="form-control" placeholder="Title" required>
        </div>
        <div class="col">
          <input type="text" name="description" class="form-control" placeholder="Description">
        </div>
        <div class="col">
          <button class="btn btn-primary" type="submit">PÅ™idat ToDo</button>
        </div>
      </div>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
