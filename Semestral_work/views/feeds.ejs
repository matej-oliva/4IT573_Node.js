<div class="card">
  <div class="card-body">
    <h5 class="card-title">My Feeds</h5>
    <a href="/feeds/new" class="btn btn-primary mb-2">Add New Feed</a>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">URL</th>
            <th scope="col">Name</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% feeds.forEach(feed => { %>
            <tr>
              <td class="align-middle"><a href="<%= feed.url %>"><%= feed.url %></a></td>
              <td class="align-middle"><%= feed.name %></td>
              <td class="align-middle">
                <form action="/feeds/<%= feed.id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this feed?')">
                  <button type="submit" class="btn btn-link text-danger">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
